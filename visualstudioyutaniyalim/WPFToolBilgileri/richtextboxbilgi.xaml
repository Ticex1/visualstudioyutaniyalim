<UserControl x:Class="visualstudioyutaniyalim.WPFToolBilgileri.richtextboxbilgi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:visualstudioyutaniyalim.WPFToolBilgileri"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFD6D6D6">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="258" Margin="30,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="348" RadiusY="16.977" RadiusX="16.977"/>
        <TextBox HorizontalAlignment="Left" Height="225" Margin="52,45,0,0" TextWrapping="Wrap" Text="RichTextbox kontrolü isminden de anlaşılacağı üzere zengin TextBox kontrolüdür. TextBoxta yazımızın biçimiyle çok oynayamıyorduk ama RichTextBox kullanımı bize yazımızı biçimlendirme, rengini, şeklini değiştirip görsel olarak istediğimiz forma getirebilme imkanı sağlamaktadır.  TextBox ta biçimlendirme komutları yoktur ama RichTextBox ta bu komutlar vardır." VerticalAlignment="Top" Width="305" FontSize="16" Background="{x:Null}"/>

    </Grid>
</UserControl>
